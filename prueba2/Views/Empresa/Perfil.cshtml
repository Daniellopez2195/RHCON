@section scripts{
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>

        $("#boton_informacion").click(() => {

            $("#caja").toggleClass("informacion_none");

        });

        /*Initialize Swiper*/
        var slides = 3;


        if (screen.width < 900) {
            slides = 2;
        }

        if (screen.width < 600) {
            slides = 1;
        }

        var swiper = new Swiper(".mySwiper", {
            slidesPerView: slides,
            spaceBetween: 30,
            loop: true,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            autoplay: {
                delay: 2500,
                disableOnInteraction: false,
            },
        });


        //alerta de viewbag

        var message = "@Html.ViewBag.Message";
    if (message != 0) {
        Swal.fire({
            //title:"",
            // text:
            html: '<h4>' + message + '</h4>' +
                '<img src="/assets/img/encuestas.png" alt="">'
        });
    }

    </script>

