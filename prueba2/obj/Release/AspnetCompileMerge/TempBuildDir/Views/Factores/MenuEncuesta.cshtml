@model rhcon.Models.ViewModel.EmpresaViewModel
@{
    ViewBag.Title = "MenuEncuesta";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<style>
    .boton {
        max-width: 400px;
        display: flex;
        justify-content: center;
    }
</style>

<div class="container-fluid">
    <div class="row perfil">
        <div class="col-lg-4 col-md-4 col-12 d-flex align-items-center justify-content-center pt-2 justify-content-md-start logo">
            <img src="~/Assets/img/SVG/LOGO/rhlogo.png" class="log" alt="Alternate Text" style="width:160px; height:60px" />
        </div>
        <div class="col-lg-6 col-md-4 col-12  d-flex align-items-center pt-2 justify-content-center">
            @{string infodisplay = Session["infoDisplay"].ToString();}
            @infodisplay
        </div>
        <div class="col-lg-3 col-md-5 col-12  d-flex justify-content-center justify-content-md-end pt-2 align-items-center">
            @* agregar logo de la empresa *@
            @{
                if (Session["empresa"] != null)
                {
                    var oEmpresa = (rhcon.Models.ViewModel.EmpresaViewModel)Session["empresa"];

                    <img src="~/Assets/logos/@oEmpresa.strlogotipo" alt="Alternate Text" class="log" />
                }
            }

        </div>
    </div>
    <br />

    <div class="row pt-2 pb-2 d-flex justify-content-center">


        <div class="mt-2 mb-2 mt-lg-0 mb-lg-0  col-6 col-lg-2 d-flex justify-content-center">
            <a href="~/Factores/ActivarP" class="btn_option d-flex justify-content-center flex-column align-items-center">
                <span>
                    <embed src="~/Assets/img/SVG/ACTIVACION.SVG" style="width:80px; height:80px" type="image/svg+xml" />
                </span>
                <h2>Activación</h2>
            </a>
        </div>

        <div class="mt-2 mb-2 mt-lg-0 mb-lg-0  col-6 col-lg-2 d-flex justify-content-center">
            <a href="~/Factores/ExtenderP" class="btn_option d-flex justify-content-center flex-column align-items-center">
                <span>
                    <embed src="~/Assets/img/SVG/EXTENSION.svg" style="width:80px; height:80px" type="image/svg+xml" />
                </span>
                <h2>Extensión</h2>
            </a>
        </div>

        <div class="mt-2 mb-2 mt-lg-0 mb-lg-0  col-6 col-lg-2 d-flex justify-content-center">
            <a href="#" id="reforzamiento" class="btn_option d-flex justify-content-center flex-column align-items-center">
                <span>
                    <embed src="~/Assets/img/SVG/RECORDATORIO.SVG" style="width:80px; height:80px" type="image/svg+xml" />
                </span>

                <h2>Recordatorio</h2>
            </a>
        </div>

        <div class="mt-2 mb-2 mt-lg-0 mb-lg-0  col-6 col-lg-2 d-flex justify-content-center">
            <a href="#!" id="cierre" class="btn_option d-flex justify-content-center flex-column align-items-center">
                <span>
                    <embed src="~/Assets/img/SVG/CIERRE.svg" style="width:80px; height:80px" type="image/svg+xml" />
                </span>

                <h2>Cierre Definitivo</h2>
            </a>
        </div>



        <div class="mt-2 mb-2 mt-lg-0 mb-lg-0  col-6 col-lg-2 d-flex justify-content-center">
            <a href="~/Factores/Historial" class="btn_option d-flex justify-content-center flex-column align-items-center">
                <span>
                    <embed src="~/Assets/img/SVG/historial.svg" style="width:80px; height:80px" type="image/svg+xml" />
                </span>

                <h2>Historial</h2>
            </a>
        </div>


    </div>
    <br />
    <a href="~/Factores/Menuresultados" class="btn btn-primary">Regresar</a>

    <div class="row">

        <div class="col-8 col-lg-9 offset-lg-3 d-flex justify-content-end" style="padding-top:20px;">
            <a href="https://rhcon.com.mx/" target="_blank">
                <span>
                    <embed src="~/Assets/img/SVG/LOGO/SVGLOGO.svg" style="width:400px; height:60px" type="image/svg+xml" />
                </span>
            </a>
        </div>

    </div>

</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    var cierre = document.querySelector("#cierre");
    var reforzar = document.querySelector("#reforzamiento");


    cierre.addEventListener("click", () => {
        Swal.fire({
            title: '<h3>¿ Estas seguro que deseas cerrar el período de evaluación ? </h3>',
            text: "una vez realizada esta accion no podras modificar el período de evaluacion hasta el 1 de enero del  @DateTime.Now.AddYears(1).Year.ToString() " ,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Continuar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                document.location.href = "/Factores/Cierre"
            }
        })
    })


        reforzar.addEventListener("click", () => {
        Swal.fire({
            title: '¿ Estas seguro que deseas mandar un reforzamiento ?',
            text: "" ,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Continuar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                document.location.href = "/Factores/Reforzar"
            }
        })
    })
</script>