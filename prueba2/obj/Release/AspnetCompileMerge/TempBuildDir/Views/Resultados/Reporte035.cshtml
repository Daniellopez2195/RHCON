@using rhcon.Models
@model List<resultados_por_usuario_035>
@{
    ViewBag.Title = "ReportePDF";
}
<style>
    * {
        padding: 6px;
        font-size: 12px;
    }

    .base{
        background-color:black;
        color:white;
    }
</style>


<h1 style="text-align:center; font-size: 40px; font-weight:bold;">Reporte de resultados de la NOM-035-STPS-2018</h1>

<br />




<table class="default">


    <tr class="base">



        <th colspan="1">CURP / ITEM</th>

            @{

            var valor = 1;
            while (valor <= 72)
            {
                
        
                <th>@valor</th>
                
                valor += 1;

            }

            }
        

    </tr>


    @foreach (var usuario in Model)
    {

        while(usuario.valores.Length < 144){
            usuario.valores += "*,";
        }

        <tr>


            <th>
                @usuario.curp
            </th>



            @foreach (string dato in usuario.valores.Split(','))
            {
                if (dato.Trim() != "")
                {
                    <th>@dato</th>
                }

            }


        </tr>



    }









</table>