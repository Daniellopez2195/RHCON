
@{
    ViewBag.Title = "Reporte Acciones";
    Layout = "~/Views/Shared/_LayoutCrud.cshtml";
}

<style>
    .campos {
        padding: 10px;
    }

    label {
        color: #A9A7A7;
    }

    input, select, textarea {
        border: 1.5px solid #CDCDCD;
        border-radius: 4px;
        color: #A9A7A7;
        background-color: white;
    }

    .izquierda {
        width: 70%
    }

    .derecha {
        width: 85%
    }

    .fondo {
        background-color: #9B9B9B;
    }
</style>
<div class="container-fluid">
    <h4 style="text-align:center">Plan de Acción NOM-035-STPS-2018</h4>
    <div class="row" style="padding-top:25px">
        <div class="col-5">
            <div class="row">
                <div class="campos">
                    <label>Folio</label><br />
                    <input class="izquierda" type="text" placeholder="Folio" name="name" value="" />
                </div>
                <div class="campos">
                    <label>Tipo</label><br />
                    <input class="izquierda" type="text" name="name" value="" placeholder="Tipo" />
                </div>
                <div class="campos">
                    <label>Actividad</label><br />
                    <textarea class="izquierda" placeholder="Actividad"></textarea>
                </div>
                <div class="campos">
                    <label>Fecha Compromiso</label><br />
                    <input class="izquierda" type="date" name="name" value="" />
                </div>
                <div class="campos">
                    <label>Status de la actividad</label><br />
                    <select class="izquierda">
                        <option value="value">Seleccione un status</option>
                        <option value="value">Pendiente</option>
                        <option value="value">En proceso</option>
                        <option value="value">Finalizada</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-7">
            <div class="row">
                <div class="campos">
                    <label>Comentarios</label><br />
                    <textarea class="derecha" placeholder="Comentarios"></textarea>
                </div>
                <div class="campos">
                    <label>Archivos de evidencia</label><br />
                    <input type="file" name="name" value="" />
                </div>
                <div class="">
                    <label>Archivos Cargados</label><br />
                    <div class="row fondo campos">
                        <div class="col">
                            <span>Nombre Del Archivo</span>
                        </div>
                        <div class="col">
                            <span>Formato</span>
                        </div>
                        <div class="col">
                            <span>Fecha</span>
                        </div>
                    </div>
                    <div class="row campos" style="border-bottom: 1px solid #929292">
                        <div class="col">
                            <span>ARCHIVO.TXT</span>
                        </div>
                        <div class="col">
                            <span>TXT</span>
                        </div>
                        <div class="col">
                            <input type="date" name="name" value="" />
                        </div>
                    </div>

                    <div class="row campos" style="border-bottom: 1px solid #929292">
                        <div class="col">
                            <span>ARCHIVO2.TXT</span>
                        </div>
                        <div class="col">
                            <span>PDF</span>
                        </div>
                        <div class="col">
                            <input type="date" name="name" value="" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div>
            <a href="javascript:history.go(-1)" class="btn btn-primary">Regresar</a>
        </div>
    </div>

</div>
