@using rhcon.Models.ViewModel
@model rhcon.Models.ViewModel.CuestionarioViewModel
@{
    var oEmpresa = (EmpresaViewModel)Session["empresa"];
    var oEmpleado = (EmpleadoViewModel)Session["empleado"];

}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>

        .fondo {
            background-color: #e3e3e3;
        }


        img {
            width: 40%;
            position: relative;
            margin: 0 auto;
        }

        .cabezera {
            width: 100%;
            border-bottom: 1px solid #e3e3e3;
            padding-bottom: 20px;
            padding-top: 20px;
        }

        .content {
            border: 1px solid #e3e3e3;
            display: inline-block;
            background-color: white;
            width: 70%;
            margin: 30px 15%;
            color: black;
        }

        .mensaje {
            font-size: 16px;
            /*padding-left: 20%;*/
        }


        .cuerpo {
            padding: 20px;
        }

        @@import url("https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;1,300&display=swap");

        * {
            font-family: "Open Sans", sans-serif;
            color: black;
        }

        .primera {
            font-size: 22px;
            text-align: center;
            padding-bottom: 10px;
        }

        .bienestar {
            font-size: 20px;
            text-align: center;
            color: #3289DA;
            font-weight: bold;
            padding-bottom: 20px;
        }

        .span {
            color: #3289DA;
        }

        .cen {
            margin-left: 8%;
            padding: 10px 0;
        }

        .boton a {
            text-decoration: none;
            color: white;
            background-color: #3289DA;
            padding: 10px 20px;
            cursor: pointer;
            display: inline-block;
        }

        .boton {
            display: block;
            text-align: center;
            padding: 10px 0;
        }

        .estilo {
            font-style: italic;
            color: #3289DA;
        }


        .justificado {
            text-align: justify;
        }

        @@media (max-width: 800px) {
            .content {
                width: 100%;
                margin: 30px 0;
            }
        }
    </style>
</head>
<body>

    <div class="fondo">
        <div class="content">

            <div class="cabezera">
                <center>
                    <img src="~/Assets/img/SVG/LOGO/rhlogo.png" alt="">
                </center>
            </div>

            <div class="cuerpo">

                <div class="mensaje bienestar">
                    Acuse
                </div>

                <div class="mensaje cen span">
                    Gracias 
                </div>

                <div class="mensaje cen justificado">
                    Hemos recibido tu informe  de fecha @Model.Fecha.ToString("dd/MM/yyyy")  y ratificado el @DateTime.Now.ToString("dd/MM/yyyy")
                    donde declaras bajo protesta de decir verdad que el día @Model.FechaO.ToString("dd/MM/yyyy") ,
                    @Model.Traumatico en la 
                    empresa @oEmpresa.RazonComercial.
                </div>

                <div class="mensaje cen span justificado">
                    Lamentamos tal acontecimiento, no obstante, observamos que con base  al cuestionario que respondiste, no se requieren  llevar a cabo acciones de seguimiento de conformidad con la NOM-035-STPS-2018.
                </div>

                <div class="mensaje cen justificado">
                    Recuerda que tu participación es fundamental para mantener un Entorno Organizacional Favorable y prevenir  de Riesgos Psicosociales.
                </div>


                <center>
                    <div class="mensaje cen span">
                        Atentamente
                    </div>
                    <div class="mensaje cen span">
                        Comité de Bienestar Laboral
                    </div>
                    <div class="mensaje cen span">
                        @oEmpresa.RazonComercial
                    </div>
                </center>



            </div>


        </div>
    </div>



</body>
</html>