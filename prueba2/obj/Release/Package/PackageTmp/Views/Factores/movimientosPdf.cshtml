@using rhcon.Models
@using rhcon.Models.ViewModel
@model  List<Log_factores>
@{
    var empresa = (EmpresaViewModel)Session["empresa"];
}
<style>
    h2 {
        text-align: center;
        padding-bottom: 20px;
        font-weight: bold;
        font-size: 20px;
    }

    th {
        padding: 5px 10px;
        background-color: #3d3d3d;
        color: white;
        font-size: 18px;
    }

    td {
        text-align: center;
        padding: 10px 0;
        font-size: 18px;
    }

    .right {
        position: relative;
        float: right;
    }


    .left {
        position: relative;
        float: left;
        font-size:20px;
    }

    cabezera div {
        margin-left: auto;
    }

    img {
        max-height: 100px;
    }
</style>




<br />
<br />
<br />
<br />
<br />
<br />
<h2>Movimientos</h2>
<center>


    <table class="default" style="width:100%;">

        <tr>

            <th>Movimiento</th>
            <th>Fecha y hora del movimiento</th>
            <th>Fecha de inicio de la encuesta</th>
            <th>fecha de cierre de la encuesta</th>

        </tr>
        @{ var tipo2 = 0; }
        @foreach (var data in Model)
        {



    <tr>

        <td>
            @{
                if (data.tipo == 1)
                {
                    <span>Activación de encuesta</span>
                }
                else if (data.tipo == 2)
                {
                    <span>Extención de periodo</span>
                }
                else if (data.tipo == 3)
                {
                    <span>Reforzamiento</span>
                }
            }
        </td>
        <td>@data.fecha.Value.ToString("dd/MM/yyyy") / @data.fecha.Value.ToString("HH:mm")</td>
        <td>@data.fechaInicial.Value.ToString("dd/MM/yyyy")</td>
        <td>@data.fechaFinal.Value.ToString("dd/MM/yyyy")</td>

    </tr>
                tipo2 += 1;


        }
        @if (tipo2 == 0)
        {
            <tr>
                <td colspan="3">
                    no existen datos de extención de periodo
                </td>
            </tr>
        }

    </table>


</center>