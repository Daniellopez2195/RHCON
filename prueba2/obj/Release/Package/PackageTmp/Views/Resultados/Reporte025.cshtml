@using rhcon.Models
@model List<resultados_por_usuario_025>
@{
    ViewBag.Title = "ReportePDF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    * {
        padding: 6px;
        font-size: 12px;
    }


    .base {
        background-color: black;
        color: white;
    }
</style>

<h1 style="text-align:center; font-size: 40px; font-weight:bold;">Reporte de resultados de la NMX-R-025-SCFI-2015</h1>

<br />

<table class="default">


    <tr class="base">

        <th colspan="1">CURP / DIMENSIÓN</th>
        @{

            var valor = 1;
            while (valor <= 56)
            {


                <th>@valor</th>

                valor += 1;

            }

        }

    </tr>


    @foreach (var usuario in Model)
    {

        <tr>

            <th>
                @usuario.valores.Length
            </th>

            @foreach (string dato in usuario.valores.Split(','))
            {
                if (dato.Trim() != "")
                {
                    <th>@dato</th>
                }

            }

        </tr>

    }

</table>