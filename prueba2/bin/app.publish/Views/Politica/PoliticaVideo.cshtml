
@{
    Layout = "~/Views/Shared/_LayoutCrudAdministrador.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Politica</title>
</head>
<body>

    @using (Html.BeginForm("ActualizarVideo", "Politica", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <h4 style="text-align:center; margin-bottom:60px; margin-top:60px;">
            Ingrese en los recuadros las ligas de los videos que deseas actualizar
        </h4>
        <div class="d-flex justify-content-center">
            <div class="mb-3 mx-4">
                <label for="exampleInputEmail1" style="text-align:center; display:block;" class="form-label d-flex align-items-center justify-content-center">
                    <span>
                        <embed src="~/Assets/img/SVG/LOGO/Entorno organizacional 1.svg" style="width:25px; height:25px; margin-right:10px;" type="image/svg+xml" />
                    </span>
                    NOM-035-STPS-2018
                </label>
                <input type="text" class="form-control" id="link1" name="link1" value="@ViewBag.video1" aria-describedby="emailHelp">
            </div>
            <div class="mb-3 mx-4">
                <label for="exampleInputPassword1" style="text-align:center; display:block;" class="form-label d-flex justify-content-center align-items-center">
                    <span>
                        <embed src="~/Assets/img/SVG/LOGO/diversidad e inclusión.svg" style="width:35px; height:25px; margin-right:10px;" type="image/svg+xml" class="svg2" />
                    </span>
                    NMX-R-025-SCFI-2015
                </label>
                <input type="text" class="form-control" id="link2" value="@ViewBag.video2" name="link2">
            </div>
        </div>
        <div class="d-flex justify-content-center my-4">
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>

    }

    <div class="d-flex justify-content-end" style="margin-bottom:50px;">
        <a href="~/Administrador/" class="btn btn-primary">Salir</a>
    </div>
</body>
</html>
