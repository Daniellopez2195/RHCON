@model HandleErrorInfo

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_LayoutCrud.cshtml";
}

<br />
<h3>@Html.Raw(HttpUtility.HtmlEncode(Model.Exception.Message).Replace("\n", "<br/>"))</h3>
@if(Model.Exception.InnerException != null)
{
    <h3>@Html.Raw(HttpUtility.HtmlEncode(Model.Exception.InnerException.Message).Replace("\n","<br/>"))</h3>
}
<br />
<a href="javascript:history.go(-1)" class="btn btn-primary">Regresar</a>