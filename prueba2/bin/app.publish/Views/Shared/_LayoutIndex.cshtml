<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title RHcon</title>
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/e4bc8339a1.js" crossorigin="anonymous"></script>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/Content/style/home.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="menu">


        <div class="logo">
            @*@Html.Raw(File.ReadAllText(Server.MapPath("~/Assets/img/SVG/LOGO/SVGBIENESTAR.svg")))*@
            <img src="~/Assets/img/SVG/LOGO/rhlogo.png" style="width:160px; height:60px" type="image/svg+xml" />
            @*<img src="~/Assets/img/SVG/LOGO/SVGBIENESTAR.svg" width="400" height="60"  />*@
        </div>

        <ul id="ul">
            <li class="home" id="home"><a href="@Url.Content("~/Home/Index")" class="">Inicio</a></li>
            <li><a href="@Url.Content("~/Home/LineDirect")">Línea Directa</a></li>
            <li><a href="@Url.Content("~/Home/Contact")">Contáctanos</a></li>
            <li><a href="@Url.Content("~/Home/Login")">Inicio de Sesión</a></li>
        </ul>

        <div class="btn_burger">
            <div class="menu-btn__burger"></div>
        </div>

    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>




        let opciones_menu = document.querySelectorAll(".menu ul li");
        let home = document.querySelector("#home");
        let ul = document.querySelector("#ul");
        opciones_menu.forEach((opcion) => {
            opcion.addEventListener("mouseover", function (e) {
                if (opcion.className == "home") {

                } else {
                    home.className = "";
                }
            });

        });

        ul.addEventListener("mouseout", function (e) {
            home.className = "home";
        });


        const menuBtn = document.querySelector('.btn_burger');
        let menuOpen = false;
        menuBtn.addEventListener('click', () => {
            if (!menuOpen) {
                menuBtn.classList.add('open');
                menuOpen = true;
                // ul.setAttribute("style", "transform: translateX(0%);");
                ul.classList.add('salir');
            } else {
                menuBtn.classList.remove('open');
                menuOpen = false;
                ul.classList.remove('salir');
                // ul.setAttribute("style", "transform: translateX(-100%);");
            }
        });

    </script>

</body>
</html>
