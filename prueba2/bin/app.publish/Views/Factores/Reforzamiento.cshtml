@using rhcon.Models.ViewModel
@model rhcon.Models.ViewModel.CorreosPdfViewModel
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>

        .fondo {
            background-color: #e3e3e3;
        }


        img {
            width: 40%;
            position: relative;
            margin: 0 auto;
        }

        .cabezera {
            width: 100%;
            border-bottom: 1px solid #e3e3e3;
            padding-left: 30%;
            padding-bottom: 20px;
            padding-top: 20px;
        }

        .content {
            border: 1px solid #e3e3e3;
            display: inline-block;
            background-color: white;
            width: 70%;
            margin: 30px 15%;
            color: black;
        }

        .mensaje {
            font-size: 16px;
            /*padding-left: 20%;*/
        }


        .cuerpo {
            padding: 20px;
        }

        @@import url("https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;1,300&display=swap");

        * {
            font-family: "Open Sans", sans-serif;
            color: black;
        }

        .primera {
            font-size: 22px;
            text-align: center;
            padding-bottom: 10px;
        }

        .bienestar {
            font-size: 20px;
            text-align: center;
            color: #3289DA;
            font-weight: bold;
            padding-bottom: 20px;
        }

        .span {
            color: #3289DA;
        }

        .cen {
            margin-left: 8%;
            padding: 10px 0;
        }

        .boton a {
            text-decoration: none;
            color: white;
            background-color: #3289DA;
            padding: 10px 20px;
            cursor: pointer;
            display: inline-block;
        }

        .boton {
            display: block;
            text-align: center;
            padding: 10px 0;
        }

        .estilo {
            font-style: italic;
            color: #3289DA;
        }

        @@media (max-width: 800px) {
            .content {
                width: 100%;
                margin: 30px 0;
            }
        }
    </style>
</head>
<body>

    <div class="fondo">
        <div class="content">

            <div class="cabezera">
                <img src="@Model.img" alt="">
            </div>

            <div class="cuerpo">

                <div class="mensaje bienestar">
                    Apreciable Empleado(a) <br>

                </div>

                <div class="mensaje cen span">
                    Te recordamos que tu empresa @Model.empresa, ha activado la encuesta para identificar y analizar los Factores de Riesgo Psicosocial, así como evaluar el Entorno y Clima Organizacional en tu centro de trabajo.
                </div>

                <div class="mensaje cen span">
                    El periodo de evaluación es del:
                </div>
                <div class="mensaje cen">
                    @Model.inicio al @Model.fin
                </div>

                <div class="mensaje cen">
                    Contamos contigo.
                </div>

                <div class="mensaje cen">
                    Entra y participa en el Centro de Evaluación, en Cuestionarios y Encuestas
                </div>

                <center>
                    <img style="width:80px;" src="@Model.logo">
                </center>



                <div class="boton">
                    <a href="_redireccion_">Iniciar Sesión</a>
                </div>

                <div class="mensaje cen estilo">
                    "Tu participación es clave para mantener un Entorno Organizacional Favorable en @Model.empresa"
                </div>
            </div>


        </div>
    </div>


</body>
</html>